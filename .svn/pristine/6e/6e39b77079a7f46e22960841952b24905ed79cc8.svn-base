<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <style>
       div.layui-table-cell{
           height: 30px;
       }
    </style>
</head>
<body id="root">
    <div class="mainContainer">
        <blockquote class="layui-elem-quote">
            <div class="layui-row layui-form">
                <div class="layui-col-xs6">
                    <div class="layui-input-inline">
                        <input type="text" name="SearchValue" class="layui-input" v-model="queryFormData.SearchValue" placeholder="合同名称">
                    </div>
                    <div class="layui-input-inline">
                        
                        <remote-sel v-bind:setting="option" lay-verify="required" v-bind:value.sync="queryFormData.ContractStatus_ID"
                                    initial="off" lay-filter="Education_ID" laytips="合同状态"></remote-sel>
                    </div>

                    <button class="layui-btn layui-btn-primary" lay-submit lay-filter="btn" @click="doSearch">查询</button>
                </div>
                <div class="layui-col-xs6" style="text-align: right">
                    <button class="layui-btn" @click="addContract"><i class="layui-icon"></i> 新增合同</button>
                    <button class="layui-btn" @click="importContract"> 导入合同</button>
                </div>
            </div>
        </blockquote>
        <!--操作模板-->
        <table id="listTable" lay-filter="listTable"></table>
    </div>
</body>
</html>
<script src="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/vue/vue.min.js"></script>
<script src="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/layer/layui.js"></script>
<link href="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/layer/css/layui.css" rel="stylesheet" />
<script src="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/require_config.js"></script>
<script>
    require_js_file(['table', 'form', 'jquery', 'tableExt'],
        function (fnr) {
            var table = layui.table;
            var form = layui.form;
            var tableExt = layui.tableExt;
            var $ = layui.$;


            //搜索条件
            var rootApp = new Vue({
                el: '#root',
                data: {
                    queryFormData:{
                        SearchValue: '',
                        ContractStatus_ID: ''
                    },
                    option: {
                        search: true,
                        options: [],
                        fields: { root: 'Data', key: 'Dictionary_ID', value: 'Description' },
                        remote: { url: '/service/public/HDictionary/GetHDictionaryList', data: { Valid: 1, ColumnName: 'ContractStatus_ID' } }
                    }
                   
                },
                ready: function () {

                },
                mounted: {

                },

                methods: {

                    importContract: function () {
                        fnr.openDialog({
                            title: '导入合同',
                            area: ['1000px', (parent.document.documentElement || parent.document.body).clientHeight - 140 + "px"],
                            content: ['./ImportContract.html'],
                            //btn: ['确认添加'],
                            events: {
                                add: function () {
                                    listTable.refresh();
                                }
                            }
                        });
                    },

                    addContract: function () {
                        fnr.openDialog({
                            title: '添加合同',
                            area: ['1050px', (parent.document.documentElement || parent.document.body).clientHeight - 140 + "px"],
                            content: ['./addContract.html'], //这里content是一个URL，如果你不想让iframe出现滚动条，你还可以content: ['http://sentsin.com', 'no']
                            btn: ['确认添加'],
                            yes: function (index, layero) {

                                var iframeWin = window[layero.find('iframe')[0]['name']];
                                $(iframeWin.document).find(".layui-btn").click();

                            },
                            events: {
                                refresh: function (data) {
                                    listTable.refresh();
                                    layer.msg("添加成功")
                                }
                            },
                        });
                    },
                    doSearch: function () {
                        var _this = this;
                        listTable.reload({
                            url: '/service/datastore/Campus/GetCampusList',
                            where: {
                                Name: _this.queryFormData.SearchValue,
                                ContractStatus_ID: _this.queryFormData.ContractStatus_ID
                            }
                        });
                    },
                    //修改校区
                    edit: function (int) {
                        fnr.openDialog({
                            title: '修改校区',
                            area: ['470px', '200px'],
                            content: ['./add.html?ID=' + int.ID], //这里content是一个URL，如果你不想让iframe出现滚动条，你还可以content: ['http://sentsin.com', 'no']
                            btn: ['确认修改'],
                            yes: function (index, layero) {

                                var iframeWin = window[layero.find('iframe')[0]['name']];
                                $(iframeWin.document).find(".layui-btn").click();

                            },
                            events: {
                                refresh: function (data) {
                                    listTable.refresh();
                                    layer.msg("修改成功")
                                }
                            },
                        });
                    },
                    
                }
            });




            //绑定列表
            var listTable = table.render({
                elem: '#listTable',
                even: true, //开启隔行背景
                page: true, //页分
                cols: [
                    [
                        { field: 'ID', title: 'ID', width: 120, sort: true },
                        { field: 'Name', title: '合同标题', width: 120, sort: true },
                        {
                            field: 'id', title: '合同总金额', width: 120,
                        },
                        {
                            field: 'startDate', title: '合同开始日期', width: 120
                        },
                        {
                            field: 'endDate', title: '合同结束日期', width: 120
                        },  
                        {
                            field: 'status', title: '合同状态', width: 120
                        },  
                        {
                            field: 'newRecord', title: '最新跟进记录', width: 120
                        },
                        {
                            field: 'actualDate', title: '实际跟进时间', width: 120
                        },
                        {
                            field: 'nextDate', title: '下次跟进时间', 
                        },
                      // {
                      //     fixed: 'right',
                      //     field: 'name',
                      //      title: '操作',
                      //      width: 240,
                      //      toolbar: function () {
                      //          var array = new Array();
                      //          array.push("<button class=\"layui-btn layui-btn-small\" lay-event='edit'>编辑</button>");
                      //          array.push("<button class=\"layui-btn layui-btn-small " + (this.Valid == 1 ? "layui-btn-warm" : "layui-btn-normal") + " \" lay-event='editisenable'>" + (this.Valid == 1 ? "禁用" : "启用") + "</button>");
                      //          array.push("<button class=\"layui-btn layui-btn-small layui-btn-danger \" lay-event='delete'>删除</button>");
                      //          array.push("<button class=\"layui-btn layui-btn-small layui-btn-primary\" lay-event='showRoom'>教室</button>");
                      //          return "<div>" + array.join("") + "</div>";
                      //     }
                      // }
                    ]
                ],
                url: '/service/datastore/Campus/GetCampusList',
                where: {Valid:-1}
            });


            //监听工具栏事件
            tableExt.addEvent("tool(listTable)",
                {
                    //工具栏编辑事件
                    "edit": function (data, obj) {
                        rootApp.edit(data)

                    },
                    //查看教室
                    "showRoom": function (data) {
                        rootApp.showRoom(data)
                    },
                    //工具栏禁用启用事件
                    "editisenable": function (data, obj) {
                        layer.confirm('确定'+(data.Valid == 1 ? '禁用': '启用'), { icon: 3, title: '提示' }, function (index) {
                            var params = { ID: data.ID, Valid: data.Valid == 1 ? 0 : 1 }
                            $.post("/service/datastore/Campus/UpdateValid", params, function (res) {
                                if (res.SuccessResponse) {
                                    layer.msg(res.Message);
                                    $.get("/service/datastore/Campus/GetCampusList", function (rsp) {
                                        if (rsp.SuccessResponse) {
                                            listTable.refresh();
                                        }
                                    })
                                }
                                layer.msg(res.Message);
                                layer.close(index);
                            })
                        });
                       
                    },
                    //工具栏删除事件
                    "delete": function (data, obj) {
                        layer.confirm('确认要删除么', { icon: 2, title: '提示' }, function (index) {
                            var params = { ID: data.ID, Valid: data.Valid == 1 ? 0 : 1 }
                            $.post("/service/datastore/Campus/DeleteCampus", params, function (res) {
                                if (res.SuccessResponse) {
                                    layer.msg(res.Message);
                                    this.CourseInfoList = res.Data;
                                    listTable.refresh();
                                }
                                layer.msg(res.Message);
                            })

                            layer.close(index);
                        });
                    }
                });
        });
</script>