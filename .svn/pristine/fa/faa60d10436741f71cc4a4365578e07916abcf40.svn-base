<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>消息详情</title>
    <!--[if lt IE 9]>
    <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="/Resources/CSS/bootstrap/css/bootstrap.min.css">
    <link href="//at.alicdn.com/t/font_514871_9czxk955wqy6i529.css" rel="stylesheet" />
    <link href="/Resources/CSS/PC_css.css" rel="stylesheet" />
    <link href="/Resources/CSS/video-js.css" rel="stylesheet" />
    <link href="/Resources/CSS/question.css" rel="stylesheet" />
    <link href="/Resources/CSS/super.css" rel="stylesheet" />
    <link href="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/layer/css/layui.css" rel="stylesheet" />
    <script src="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/layer/layui.js"></script>
    <script src="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/vue/vue.min.js"></script>
    <script src="https://bbsresources.oss-cn-hangzhou.aliyuncs.com/js/require_config.js"></script>
    <script>
        var activeUrl="usercenter/usermanage/newsCenter.shtml"
    </script>
    <style>
    a.download{    color: #3988f5;text-decoration: underline;}
    a.download:hover{
    color: #3988f5;text-decoration: underline;
    }
    .h4_title{ color: #000;font-size: 20px;margin-bottom: 15px;font-weight: bold;}
    .h3_des{color: #000;font-size: 14px;margin-bottom: 15px;font-weight: bold;}
    </style>
</head>
<body style="background-color: #f7f7f7;user-select: none;">
    <!--头部导航 Start-->
    <!--#<!--#include file="/PublicControl/topmenu.html"-->
    <!--头部导航 End-->
    <div class="w1200 clearfix">
        <!--左侧导航 Start-->
        <!--#<!--#include file="/PublicControl/leftmenu.html"-->
        <!--左侧导航 End-->
        <div class="main" id="root">
            <div class="order-top">
                <ul class="orderTabs">
                    <li class="active">消息中心</li>
                </ul>
            </div>
            <div class="order-middle" style="margin-top: 20px;">
                <div class="middle-main">
                    <a class="goBack" style="float:right" @click="goBack()">返回上一级</a>
                    <h4 class="h4_title">{{data.Title}}</h4>
                    <h3 class="h3_des">摘要:{{data.Description}}</h3>
                    <div class="newsContent" v-html="data.Contents">

                    </div>
                    <div style="color:#999"> 
                    <span style="margin-right:20px;">{{data.AddTime}}</span>
                    <span style="margin-right:20px;">分类:{{data.CategoryName}}</span> 
                    <span>来源:{{data.Station_IDNmae}}</span>
                        <div style="float:right">
                            <i class="layui-icon">&#xe601;</i>
                            <span v-if="fuJArr.length>0">附件下载:</span> 
                            <a v-bind:href="item.url" title="{{item.fullname}}" style="margin-right: 10px;" v-for="item in fuJArr" class="download" v-if="item.fullname.length>8">{{item.fullname.substring(0,3)+"..."+item.fullname.substring(5,7)+item.fullname.slice(item.fullname.lastIndexOf("."))}}</a>
                            <a v-bind:href="item.url" title="{{item.fullname}}" style="margin-right: 10px;" v-for="item in fuJArr" class="download" v-else>{{item.fullname}}</a>
                             
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--footer-->
    <!--#<!--#include file="/PublicControl/bottommenu.html"-->
    <script>
        require_js_file(['table', 'form', 'jquery', 'tableExt', 'element', 'customUtil'],
            function (fnr) {
                var $ = layui.$;
                var table = layui.table;
                var tableExt = layui.tableExt;
                var vm = new Vue({
                    el: "#root",
                    data: {
                        data: {},
                        fuJArr:[],
                    },
                    ready: function () {
                        var _this = this;
                        $.get("/service/edu/S_NewsList/GetSNewIsLIst", { ID: fnr.getQueryString("ID")}, function (res) {
                            if (res.SuccessResponse) {

console.log(res)
                                _this.data = res.Data;
                                _this.data.AddTime = fnr.format(res.Data.AddTime, 'yyyy-MM-dd HH:mm:ss')
                                _this.fuJArr = JSON.parse(res.Data.Accessory);

                            }
                        })
                    },
                    methods: {
                        //返回上一级
                        goBack:function () {
                            javascript:history.go(-1);
                            location.reload();
                        },
                    }
                });
            })
    </script>
</body>

</html>
