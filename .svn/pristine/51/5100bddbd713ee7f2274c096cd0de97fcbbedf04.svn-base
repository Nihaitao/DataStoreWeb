<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>我的线索</title>
</head>
<body id="root">
    <div class="mainContainer">
        <blockquote class="layui-elem-quote">
            <div class="layui-row layui-form">
                <div class="layui-col-xs10">
                    <div class="layui-input-inline">
                        <remote-sel class="" v-bind:setting="searchKeySetting" laytips="线索状态" v-bind:value.sync="queryFormData.ClueStatus_ID"
                                    initial="off"></remote-sel>
                    </div>
                    <div class="layui-input-inline">
                        <remote-sel v-bind:setting="statusSetting" laytips="来源" v-bind:value.sync="queryFormData.Source_ID"
                                    initial="off"></remote-sel>
                    </div>
                    <div class="layui-input-inline">
                        <input placeholder="线索名称/手机号" type="text" name="SearchValue" class="layui-input" v-model="queryFormData.ModelValue">
                    </div>
                    <button class="layui-btn layui-btn-primary" lay-submit lay-filter="btn" @click="doSearch">查询</button>
                </div>
                <div class="layui-col-xs2" style="text-align: right">
                    <button class="layui-btn" @click="addClient"><i class="layui-icon"></i> 添加线索</button>
                </div>
            </div>
        </blockquote>
        <div>
            <button class="layui-btn layui-btn-primary layui-btn-small" @click="ClueRe">释放线索</button>
            <button class="layui-btn layui-btn-primary layui-btn-small" @click="DatchDeleta">批量删除</button>
        </div>

        <!--操作模板-->
        <table id="listTable" lay-filter="listTable"></table>
    </div>
</body>
</html>
<link href="//bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/layer/css/layui.css" rel="stylesheet" />
<script src="//bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/vue/vue.min.js"></script>
<script src="//bbsresources.oss-cn-hangzhou.aliyuncs.com/js/modules/layer/layui.js"></script>
<script src="//bbsresources.oss-cn-hangzhou.aliyuncs.com/js/require_config.js"></script>

<script>
    require_js_file(['table', 'form', 'jquery', 'tableExt', 'laydate', 'layer'],
        function (fnr) {
            var table = layui.table;
            var form = layui.form;
            var tableExt = layui.tableExt;
            var $ = layui.$;
            var layer = layui.layer;
            function trim(str) {
                return str.replace(/(^\s*)|(\s*$)/g, "");
            }
            //表格基本配置参数
            var tableColsConfig =
                [
                    { fixed: true, checkbox: true },
                    { fixed: true, field: 'ID', title: 'ID', width: 80, sort: true },
                    {
                        title: '线索名称', width: 150, sort: true, templet: function () {
                            var array = new Array();
                            array.push("<a style='color: #000;' href='javascript:;' lay-event='info'>" + (this.ClueName) + "</a>");
                            return "<div>" + array.join("") + "</div>";
                        }
                    },
                    { field: 'ClueStatusName', title: '状态', width: 150, sort: true },
                    { field: 'Phone', title: '手机号', width: 120, sort: true },
                    { field: 'Tel', title: '电话号码', width: 120, sort: true },
                    { field: 'SourceName', title: '来源', width: 120, sort: true },
                    {
                        title: '添加时间', width: 160, sort: true, templet: function () {
                            var array = new Array();
                            array.push("<span>" + fnr.format(this.AddTime, "yyyy-MM-dd HH:mm") + "</span>");
                            return "<div>" + array.join("") + "</div>";
                        }
                    },
                    {
                        title: '最新跟进记录', width: 300, sort: true, templet: function () {
                            var array = new Array();
                            array.push("<span>" + (this.Content == null || this.Content == '' ? "-" : this.Content) + "</span>");
                            return "<div>" + array.join("") + "</div>";
                        }
                    },
                    {
                        fixed: 'right',
                        title: '操作',
                        width: 280,
                        toolbar: function () {
                            var array = new Array();
                            array.push("<button href='javascript:;' class='layui-btn layui-btn-info layui-btn-small' lay-event='detail'>添加跟进</button><button type='button' class='layui-btn layui-btn-info layui-btn-small' lay-event='modifyClue'>修改</button><button type='button' class='layui-btn layui-btn-info layui-btn-small' lay-event='detai2'>转为客户</button><button type='button' class='layui-btn layui-btn-danger layui-btn-small' lay-event='deleteClue'>删除</button>");
                            return "<div>" + array.join("") + "</div>";
                        }
                    }
                ];
            //搜索条件
            window.rootApp = new Vue({
                el: '#root',
                data: {
                    searchKeySetting: {
                        search: true,
                        options: [],
                        fields: { root: 'ReturnData.Data', key: 'ID', value: 'Description' },
                        remote: { url: '/service/HDictionary/GetHDictionaryList', data: { Valid: 1, ColumnName: 'ClueStatus_ID' } }
                    },
                    //搜索选择框 --- 来源
                    statusSetting: {
                        search: true,
                        options: [],
                        fields: { root: 'ReturnData.Data', key: 'ID', value: 'Description' },
                        remote: { url: '/service/HDictionary/GetHDictionaryList', data: { Valid: 1, ColumnName: 'Source_ID' } }
                    },
                    //搜索选择的参数列表
                    queryFormData: {
                        ClueStatus_ID: 0,
                        Source_ID: 0,
                        ModelValue: ''
                    },
                },
                methods: {
                    //查询条件
                    doSearch: function () {
                        var self = this;
                        self.queryFormData.ModelValue = trim(self.queryFormData.ModelValue);
                        listTable.reload({
                            where: this.queryFormData
                        })
                    },
                    //转为意向客户
                    TurnClient:function(data){
                        fnr.openDialog({
                            title: '转为意向客户',
                            area: ['800px', '700px'],
                            content: ['../../Client/Client/Add1.html?ID=' + data.ID],
                            btn: ['确认添加'],
                            events: {
                                refresh: function (retVal) {
                                    if (retVal.status) {
                                        $.ajax({
                                            url: "/service/Clue/UpdateClueToClientStatus",
                                            data: { ID: data.ID, Client_ID: retVal.ClientID },
                                            type: 'POST',
                                            dataType: 'json',
                                            success: function (data) {
                                                if (data.SuccessResponse) {
                                                    layer.msg(data.Message);
                                                    listTable.refresh();
                                                } else {
                                                    layer.msg(data.Message);
                                                }
                                            }
                                        });
                                    } else {
                                        if (data.msg) {
                                            layer.msg(data.msg)
                                        } else {
                                            layer.msg('添加失败');
                                        }
                                    }
                                }
                            }
                        });
                    },
                    //添加线索
                    addClient: function () {
                        fnr.openDialog({
                            title: '添加线索',
                            area: ['800px', '700px'],
                            content: ['AddClue.html'],
                            btn: ['确认添加'],
                            events: {
                                refresh: function (data) {
                                    if (data.status) {
                                        layer.msg('添加成功');
                                        listTable.refresh();
                                    } else {
                                        if (data.msg) {
                                            layer.msg(data.msg)
                                        } else {
                                            layer.msg('添加失败');
                                        }
                                    }
                                }
                            }
                        });
                    },
                    //修改线索
                    modifyClue: function (data) {
                        fnr.openDialog({
                            title: '修改线索',
                            area: ['800px', '700px'],
                            content: ['ModifyClue.html?ID=' + data.ID],
                            btn: ['确认修改'],
                            events: {
                                refresh: function (data) {
                                    if (data.status) {
                                        layer.msg(data.msg);
                                        listTable.refresh();
                                    } else {
                                        layer.msg(data.msg);
                                    }
                                }
                            }
                        })
                    },
                    DatchDeleta: function (data) {
                        if (this.deleteClue != null) {
                            var deleteArr = this.deleteClue.join(',');
                            console.log(deleteArr)
                            layer.confirm('确认要删除吗？', function (index) {
                                $.ajax({
                                    url: "/service/Clue/DeleteClue",
                                    data: { Other: deleteArr },
                                    type: 'POST',
                                    dataType: 'json',
                                    success: function (data) {
                                        if (data.ReturnData.Data) {
                                            if (data.SuccessResponse) {
                                                layer.msg(data.Message);
                                                listTable.refresh();
                                            } else {
                                                layer.msg(data.Message);
                                            }
                                        } else {
                                            layer.msg('data为空');
                                        }
                                    }
                                });
                            })
                        } else {
                            layer.msg("请选择线索ID");
                        }
                    },
                    //释放客户
                    ClueRe: function () {
                        if (this.releaseClue != null) {
                            var releaseArr = this.releaseClue.join(',');
                            layer.confirm('真的释放吗', function (index) {
                                $.ajax({
                                    url: "/service/Clue/ReleaseClue",
                                    data: { Other: releaseArr },
                                    type: 'POST',
                                    dataType: 'json',
                                    success: function (data) {
                                        if (data.ReturnData.Data) {
                                            if (data.SuccessResponse) {
                                                layer.msg(data.Message);
                                                listTable.refresh();
                                            } else {
                                                layer.msg(data.Message);
                                            }
                                        } else {
                                            layer.msg('data为空');
                                        }
                                    }
                                });
                            })
                        } else {
                            layer.msg("请选择线索ID");
                        }
                        
                    },
                    ClueMsg: function (data) {
                        fnr.openDialog({
                            title: '线索信息',
                            area: ['1000px', (parent.document.documentElement || parent.document.body).clientHeight - 140 + "px"],
                            content: ['Info.html?ID=' + data.ID + "&ClueStatus_ID=" + data.ClueStatus_ID],
                            events: {
                                add: function () {
                                    listTable.refresh();
                                }
                            }
                        });
                    },
                    //添加联系记录
                    AppContact: function (data) {
                        fnr.openDialog({
                            title: '添加联系记录',
                            area: ['750px', '500px'],
                            content: ['../Contact/AddContact.html?ID=' + data.ID + "&ClueStatus_ID=" + data.ClueStatus_ID],
                            btn: ['确认添加'],
                            events: {
                                refresh: function (data) {
                                    if (data.status) {
                                        layer.msg(data.msg);
                                        listTable.refresh()
                                    } else {
                                        layer.msg(data.msg);
                                    }
                                }
                            }
                        });
                    },
                }
            });
            //绑定列表
            var listTable = table.render({
                elem: '#listTable',
                even: true, //开启隔行背景
                page: true, //页分,
                id: 'listTable',
                cols: [tableColsConfig],
                url: "/service/Clue/MyClueList"
            });
            //获取选中的行相关数据
            table.on('checkbox(listTable)', function (obj) {
                var checkStatus = table.checkStatus('listTable');
                rootApp.deleteClue = [];
                rootApp.releaseClue = [];
                $.each(checkStatus.data, function (k, v) {
                    rootApp.deleteClue.push(v.ID);
                    rootApp.releaseClue.push(v.ID);
                });
            });

            //监听工具栏事件
            tableExt.addEvent("tool(listTable)",
                {
                    "info": function (data, obj) {
                        rootApp.ClueMsg(data);
                    },
                    "detail": function (data, obj, e) {
                        rootApp.AppContact(data);
                    },
                    "detai2":function (data, obj, e){
                        rootApp.TurnClient(data)
                    },
                    //删除一行
                    "deleteClue": function (data, obj) {
                        layer.confirm('确定删除吗，删除后将无法恢复', function (index) {
                            $.ajax({
                                url: '/service/Clue/DeleteClue',
                                type: 'POST',
                                data: { Other: data.ID },
                                dataType: 'json',
                                success: function (data) {
                                    if (data.ReturnData.Data) {
                                        if (data.SuccessResponse) {
                                            obj.del();
                                            layer.close(index);
                                            layer.msg(data.Message)
                                        } else {
                                            layer.msg(data.Message)
                                        }
                                    }
                                }
                            });
                        })
                    },

                    //修改一行
                    "modifyClue": function (data, obj) {
                        rootApp.modifyClue(data);
                    }
                });
        });
</script>