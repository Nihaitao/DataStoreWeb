            </div>
        </td>
    </tr>
</script>
<script>
    function delAllCookie() {
        var myDate = new Date();
        myDate.setTime(-1000);//设置时间    
        var data = document.cookie;
        var dataArray = data.split("; ");
        for (var i = 0; i < dataArray.length; i++) {
            var varName = dataArray[i].split("=");
            document.cookie = varName[0] + "=''; expires=" + myDate.toGMTString();
        }
    }
    $(function () {
        $('#exit').on('click', function () {
            delAllCookie();
            location.href = '../Login.html';
        });
    });
    //读取COOKIE方法
    function getCookie(name) {
        var arr, reg = new RegExp("(^| )" + name + "=([^;]*)(;|$)");
        if (arr = document.cookie.match(reg))
            return unescape(arr[2]);
        else
            return null;
    }
    var loginState = getCookie("StuId")
    var data = {
        loginState: loginState
    }
    var html = template('loginState_txt', data);
    $('#headLogin').html(html);
   
    function GetShoppingCar() {
        var self = this;
        $.get("/service/Order/GetShoppingCar", function (res) {
            if (res.SuccessResponse) {
                var data = {};
                data.Price = 0;
                data.dataList = res.ReturnData.Data;
                data.Num = res.ReturnData.Data.length;
                res.ReturnData.Data.map(function (a, b) {
                    data.Price += a.Price;
                })
                var html = template("carTabel", data);
                $(".pay-table tbody").html(html)
                $('.Submit-pay').on('click', function () { self.AddOrder() });
            }
        })
    }
    function DeleteCourse(e) {
        var _this = $(e.target)
        $.post('/service/Order/MoveOutShoppingCar', { Course_ID: _this.data("id") }, function (res) {
            if (res.SuccessResponse) {
                layer.msg('删除成功');
                GetShoppingCar();
            }
        })
    }
    //提交订单
    function AddOrder() {
        $.post('/service/Order/AddOrderFromShoppingCar', { StuID: '' }, function (res) {
            if (res.SuccessResponse) {
                var param = {};
                param.System_Station_ID = res.ReturnData.Data.System_Station_ID;
                param.OrderId = res.ReturnData.Data.OrderId;
                param.Money = res.ReturnData.Data.Price;
                param.OrderName = "课程支付";
                param.NotifyUrl = "http://webceshi.chutoukj.com/Order/PaySuccessDoSomething";
                param.Info = "";
                $.post('/service/pay/OnLinePay/UnifiedCreateOrder', param, function (rsp) {
                    if (rsp.SuccessResponse) {
                        location.href = 'step2.html?ID=' + rsp.Data.ID + "&OrderId=" + rsp.Data.OrderId + "&System_Station_ID=" + res.ReturnData.Data.System_Station_ID + "&Price=" + rsp.Data.Money;
                    }
                })
            } else {
                layer.msg(res.Message);
            }
        })
    }
    GetShoppingCar();
    $(".pay-table").on("click", ".pay-delete", DeleteCourse);
</script>