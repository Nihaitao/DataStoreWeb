.areaBox{
    height: 2.60rem;
    padding: 0.26rem 0.26rem 0.3rem 0.26rem;
    box-sizing: border-box;
}
textarea{
    width: 100%;
    height: 1.60rem;
    border: none;
    resize:none;
    font-size: 0.28rem;
    color: #999;
}
.iconBtn{
    height: 0.44rem;
}
.xiangji{
    display: inline-block;
    width: 0.46rem;
    height: 0.44rem;
    font-size: 0.45rem;
    margin-right: 0.17rem;
}
.yuyin{
    display: inline-block;
    width: 0.30rem;
    height: 0.44rem;
    font-size: 0.44rem;
    margin-right: 0.26rem;
}
.dingwei{
    display: inline-block;
    width: 0.35rem;
    height: 0.44rem;
    font-size: 0.44rem;
}
.xiangji,
.yuyin,
.dingwei{
    color: #E4E4E4;
}
.main{
    margin-bottom: 1rem;
}
.main ul li{
    height: 0.88rem;
    border-bottom: 0.01rem solid #e5e5e5;
    padding:0 0.26rem;
    box-sizing: border-box;
}
.main ul li p{
    display: inline-block;
    line-height: 0.88rem;
}
.main ul li p:first-child{
    font-size: 0.28rem;
    color: #333;
}
.main ul li p:last-child{
    float: right;
    font-size: 0.26rem;
    color: #999;
}
.main ul li p:last-child i{
    font-size: 0.24rem;
}
.footerBtnBox{
    height: 1rem;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}
.footerBtnBox p{
    font-size: 0.28rem;
    color: #fff;
    text-align: center;
    line-height: 1rem;
    background-color: #F76260;
}
