        </script>
        <!--获取层次分类信息-->
        <script type="text/html" id="LevelList">
            <ul class="levelList">
                {{each list}}
                <li data-id="{{$value.ID}}"><a href="javascript:;">{{$value.Name}}</a></li>
                {{/each}}
            </ul>
        </script>
        <!--获取层次分类信息-->
        <script type="text/html" id="CategoryList">
