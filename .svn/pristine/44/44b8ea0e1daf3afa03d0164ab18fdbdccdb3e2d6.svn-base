<script>
    //读取COOKIE方法
    function getCookie(name) {
        var arr, reg = new RegExp("(^| )" + name + "=([^;]*)(;|$)");
        if (arr = document.cookie.match(reg))
            return unescape(arr[2]);
        else
            return null;
    }
    //退出，删除cookie
    function delAllCookie() {
        var myDate = new Date();
        myDate.setTime(-1000);//设置时间
        var data = document.cookie;
        var dataArray = data.split("; ");
        for (var i = 0; i < dataArray.length; i++) {
            var varName = dataArray[i].split("=");
            document.cookie = varName[0] + "=''; expires=" + myDate.toGMTString() + ";path=/";
        }
    }
    var rootApp = new Vue({
        el: '#top',
        data: {
            LoginPageConfig: '',
            loginState: false,
            layoutData: {},
            headPhoto: '',
            msg: '',
            HeaderLogoName: ''  //头部公司名称
        },
        ready: function () {
            this.LoginPageFn();
            this.loginState = getCookie("StuId");
            if (this.loginState != '') {
                this.loginState = true;
                this.GetStudentInfo();
            }
            this.LayoutFn();
        },
        methods: {
           
            //判断LOGO
            LayoutFn: function () {
                var self = this;
                $.get('/service/public/Mechanism/GetSetlist', function (res) {
                    if (res.SuccessResponse) {
                        if (res.Data) {
                            self.layoutData = res.Data;
                        }
                    }
                });
            },

            //退出
            exit: function () {
                delAllCookie();
                location.href = '/usercenter/login.shtml';
            },

            //LOGO跳转首页
            hrefIndex: function () {
                location.href = '/usercenter/index.shtml';
            },

            //获取学员信息
            GetStudentInfo: function () {
                var self = this;
                $.get('/service/edu/Student/GetStudentInfo', function (res) {
                    self.msg = 'hi，' + res.Data.student_model.Name;
                    self.headPhoto = res.Data.student_model.HeadImg ? res.Data.student_model.HeadImg : '/Resources/images/photo.png'
                    self.loginState = true;
                });
            },

            //获取本站点学员设置的数据
            LoginPageFn: function () {
                var self = this;
                $.get('/service/datastore/HConfiguration/GetConfiguration', function (res) {
                    if (res.SuccessResponse) {
                        self.LoginPageConfig = res.Data.LoginPageConfig;
                    }
                });
            },
            //登录
            LoginFn: function () {
                var self = this;
                if (sessionStorage.getItem("thisUrl")) {
                    sessionStorage.removeItem("thisUrl");
                    sessionStorage.setItem("thisUrl", location.href);
                } else {
                    sessionStorage.setItem("thisUrl", location.href);
                }
                if (self.LoginPageConfig == 0) {
                    layer.open({
                        type: 2,
                        area: ['400px', '550px'],
                        fixed: false, //不固定
                        maxmin: true,
                        title: '欢迎登陆',
                        content: '/usercenter/login_model.html',
                    });
                } else {
                    location.href = '/usercenter/Login.shtml';
                }
            },
        }
    });
</script>
