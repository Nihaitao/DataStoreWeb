header {
  position: relative;
  line-height: 0.775862rem;
  border-top: 0.017241rem solid #ddd ;
  border-bottom: 0.017241rem solid #ddd ;
}
header i {
  position: absolute;
  left: 0.344827rem;
  font-size: 0.293103rem;
  color: #333;
}
header p {
  font-size: 0.293103rem;
  text-align: center;
  color: #000;
}
main .firstCon {
  position: relative;
}
main .firstCon .pic {
  position: absolute;
  top: 0.25862rem;
  left: 0.25862rem;
