body {
  background: #f5f5f9;
}
header {
  background: #fff;
  line-height: 0.844827rem;
  border-bottom: 0.017241rem solid #dddddd ;
  border-top: 0.017241rem solid #dddddd ;
  position: relative;
  text-align: center;
  font-size: 0.275862rem;
  color: #333333;
}
header i {
  position: absolute;
  top: 0;
  left: 0.344827rem;
  font-size: 0.310344rem;
  color: #333333;
}
header .write {
  position: absolute;
  top: 0;
  right: 0.25862rem;
  color: #ffa200;
}
.centerbox {
  display: block;
  width: 100%;
  height: 0.172413rem;
  border-bottom: 0.017241rem solid #dddddd;
}
main .firstCon {
  background: #fff;
  border-bottom: 0.017241rem solid #dddddd;
  padding-left: 0.25862rem;
  line-height: 0.741379rem;
}
main .firstCon p {
  border-bottom: 0.017241rem solid #dddddd;
  color: #333;
  font-size: 0.25862rem;
}
main .firstCon p:last-of-type {
  border: none;
}
main .firstCon p .txt {
  float: right;
  color: #999;
  margin-right: 0.25862rem;
}
