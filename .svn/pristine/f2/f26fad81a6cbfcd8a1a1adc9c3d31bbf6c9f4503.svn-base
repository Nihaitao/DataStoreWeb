.photograph,
.uploadImg{
    text-align: center;
}
.photograph{
    margin-top: 2.5rem;
}
.uploadImg{
    margin-top: 1.5rem;
}

.photograph .btn,
.uploadImg .btn{
    width: 3.80rem;
    height: 1rem;
    font-size: 0.3rem;
    color: #fff;
    border-radius: 1rem;
    line-height: 1rem;
    display: inline-block;
}
.photograph .btn{
    background-color: #f26760;
}
.uploadImg .btn{
    background-color: #ddd;
}
.photograph p,
.uploadImg p{
    font-size: 0.26rem;
    color: #666;
    margin-bottom: 0.2rem;
    line-height: 1;
}