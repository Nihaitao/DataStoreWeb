.lines{
    border-top: 0.01rem solid #ededed;
    border-bottom: 0.01rem solid #ededed;
}
.head{
    margin: 0.2rem 0;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    text-align: center;
}
.btnBox{
    display: inline-block;
    width: 5.82rem;
    border-radius: 0.05rem;
    box-sizing: border-box;
    border: 0.02rem solid #4e75a7;
    font-size: 0;
}
.btnBox div{
    width: 50%;
    display: inline-block;
    text-align: center;
    line-height: 0.6rem;
    font-size: 0.24rem;
    background-color: #fff;
    color: #4e75a7;
}
.btnBox div.active{
    background-color: #4e75a7;
    color: #fff;
}

.relationContent{
    margin-top: 1rem;
}
.search{
    height: 0.78rem;
    box-sizing: border-box;
    border-bottom: 0.01rem solid #ededed;
    padding: 0 0.3rem 0 0.26rem;
}
.search span{
    display: inline-block;
    line-height: 0.78rem;
    font-size: 0.26rem;
    color: #999;
}
.search .searchIcon{
    display: inline-block;
    float: right;
    line-height: 0.78rem;
    font-size: 0.35rem;
    color: #999;
}
.relationContent ul{
    display: none;
}
.relationContent ul.active{
    display: block;
}
.relationContent ul .item{
    margin-left: 0.26rem;
    border-bottom: 0.01rem solid #ededed;
    padding: 0.27rem 0 0.28rem;
}
.relationContent ul .item p:first-child{
    font-size: 0.3rem;
    color: #333;
    margin-bottom: 0.2rem;
}
.relationContent ul .item p:last-child{
    font-size: 0.26rem;
    color: #999;
}
.relationContent ul .item p:last-child span{
    color: #ffbe00;
}
